<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:AvaloniaSample.ViewModels"
        mc:Ignorable="d" Height="200" Width="400"
        x:Class="AvaloniaSample.Views.CustomDialog"
        x:DataType="vm:CustomDialogViewModel"
        Title="CustomDialog">

  <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
    <TextBlock Text="Enter your name" />
    <TextBox Text="{Binding Name}" Margin="0,10,0,0" />
    <Button Content="OK" Command="{Binding OkCommand}" HorizontalAlignment="Center" />
  </StackPanel>
</Window>
